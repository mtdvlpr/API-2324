<form method="get" action="search" role="search" class="search-form">
  <sl-visually-hidden>
    <label for="search-input">Search for a movie</label>
  </sl-visually-hidden>
  <sl-input
    id="search-input"
    type="search"
    placeholder="Search for a movie"
    size="large"
    enterkeyhint="search"
    name="q"
    value="{{ query }}"
    pill
    clearable
  >
    <sl-icon name="search" slot="prefix"></sl-icon>
    <sl-icon-button name="mic" label="Search by voice" class="voice-search" slot="suffix"></sl-icon-button>
  </sl-input>
</form>
