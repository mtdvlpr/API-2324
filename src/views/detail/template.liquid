{% layout "base" %}
{% if movie.original_title %}
  {% assign mov = movie.original_title %}
{% else %}
  {% assign mov = movie.name %}
{% endif %}
{% block content %}
<sl-breadcrumb>
  <sl-breadcrumb-item href="/">
    <sl-icon slot="prefix" name="house"></sl-icon>
    Home
  </sl-breadcrumb-item>
  <sl-breadcrumb-item>{{ mov }}</sl-breadcrumb-item>
</sl-breadcrumb>
<div class="movie__container">
  <div class="movie__info">
    <img src="{{tmdbAssetUrl}}/w500/{{ movie.poster_path }}" alt="Movieposter for {{ mov }}" class="movie__info-image">
    <h1 class="h1">{{ mov }}</h1>
    <p class="movie__info-description">{{ movie.overview }}</p>
    <dl>
      <dt>Release date:</dt>
      <dd>{{ movie.release_date }}</dd>
      <dt>Rating:</dt>
      <dd>{{ movie.vote_average }}</dd>
    </dl>
    {% if movie.trailer %}
      <iframe src="https://www.youtube-nocookie.com/embed/{{movie.trailer.key}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    {% endif %}
  </div>

  <div class="backdrop-image__container">
    <img src="{{tmdbAssetUrl}}/w1280/{{ movie.backdrop_path }}" alt="" class="backdrop-image">
  </div>
</div>
{% endblock %}
